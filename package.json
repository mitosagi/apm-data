{
  "name": "apm-data",
  "version": "1.0.0",
  "repository": "https://github.com/hal-shu-sato/apm-data.git",
  "author": "ato lash <hal-shu-sato@users.noreply.github.com>",
  "license": "CC BY-NC-SA 4.0",
  "private": true,
  "scripts": {
    "lint": "run-s lint:prettier lint:eslint lint:jsonschema",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --fix-dry-run .",
    "lint:jsonschema": "ajv -s v3/schema/core.json -d v3/data/core.json && ajv -s v3/schema/packages.json -d v3/data/packages.json && ajv -s v3/schema/scripts.json -d v3/data/scripts.json",
    "fix": "run-s fix:typedef fix:prettier fix:eslint",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "fix:typedef": "json2ts v3/schema/core.json v3/types/core.d.ts && json2ts v3/schema/packages.json v3/types/packages.d.ts && json2ts v3/schema/scripts.json v3/types/scripts.d.ts",
    "prepare": "husky install",
    "check-convert": "node util/check-convert.js",
    "check-update": "node util/check-update.js",
    "mod-core": "node util/update-mod.js --core",
    "mod-packages": "node util/update-mod.js --packages",
    "mod-convert": "node util/update-mod.js --convert",
    "mod-scripts": "node util/update-mod.js --scripts",
    "sri": "node util/sri.js"
  },
  "devDependencies": {
    "@octokit/rest": "^18.12.0",
    "@prettier/plugin-xml": "^2.0.1",
    "ajv-cli": "^5.0.0",
    "chalk": "^4.1.2",
    "clipboardy": "^2.3.0",
    "eslint": "^8.13.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "fast-xml-parser": "^4.0.7",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.0",
    "json-schema-to-typescript": "^10.1.5",
    "lint-staged": "^12.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-md-nocjsp": "^1.1.1",
    "ssri": "^9.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,md,xml,xsd}": "prettier --write"
  }
}
